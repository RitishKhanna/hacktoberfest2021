#include <bits/stdc++.h>
int getPairsCount(int arr[], int n, int sum){
  // Write your code here
  int i=0;
  unordered_map <int,int> map;
  while(i<n){
    if(map.find(arr[i])==map.end()){
      map[arr[i]]=1;
    }
    else{
      map[arr[i]]++;
    }
    i=i+1;
  }
  i=0;
  int count=0;
  while(i<n){
    int k=sum-arr[i];
    int k1=0;
    if(map.find(k)!=map.end()){
      count=count+map[k];
    }
    i=i+1;
  }
  if(map.size()==1){
	return map[arr[0]]+map[arr[0]]/2;
  }
  return count/2;
  }
